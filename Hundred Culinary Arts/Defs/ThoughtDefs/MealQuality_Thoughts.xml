<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 负面想法：吃了糟糕的食物 (-3心情，持续4小时) -->
  <ThoughtDef>
    <defName>CulinaryArts_AteTerribleMeal</defName>
    <thoughtClass>CulinaryArts.Thought_Memory_NamedMeal</thoughtClass>
    <durationDays>0.1667</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <stages>
      <li>
        <label>吃了难以下咽的食物</label>
        <description>那食物真是糟糕透了...焦糊、过咸，简直难以下咽。</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- 正面想法：吃了好吃的食物 (+3心情，持续4小时) -->
  <ThoughtDef>
    <defName>CulinaryArts_AteGoodMeal</defName>
    <thoughtClass>CulinaryArts.Thought_Memory_NamedMeal</thoughtClass>
    <durationDays>0.1667</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <stages>
      <li>
        <label>吃了美味的食物</label>
        <description>那道菜做得真不错，色香味俱全。</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- 传说想法：吃了传说级食物 (+8心情，持续6小时) -->
  <ThoughtDef>
    <defName>CulinaryArts_AteLegendaryMeal</defName>
    <thoughtClass>CulinaryArts.Thought_Memory_NamedMeal</thoughtClass>
    <durationDays>0.25</durationDays>
    <stackLimit>3</stackLimit>
    <stackedEffectMultiplier>0.6</stackedEffectMultiplier>
    <stages>
      <li>
        <label>吃了令人难忘的美食</label>
        <description>这简直是艺术品！完美的食材，精湛的技艺，让人回味无穷。</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- 普通想法：吃了有名字的食物 (+0心情，持续4小时，主要用于记录菜名) -->
  <ThoughtDef>
    <defName>CulinaryArts_AteNormalMeal</defName>
    <thoughtClass>CulinaryArts.Thought_Memory_NamedMeal</thoughtClass>
    <durationDays>0.1667</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <stages>
      <li>
        <label>吃了特色的食物</label>
        <description>这是一道有着独特名称的菜肴。</description>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>