    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <recipeUsers>
      <li>Campfire</li>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <DE_HotDrink>4</DE_HotDrink>
    </products>
    <workAmount>400</workAmount>
  </RecipeDef>

