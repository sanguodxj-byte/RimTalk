<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Cold Drink -->
  <RecipeDef>
    <defName>DE_MakeColdDrink</defName>
    <label>make cold drinks</label>
    <description>Prepare a batch of refreshing cold drinks.</description>
    <jobString>Making cold drinks.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>4</count> <!-- 4原料 -> 4饮品 (0.05营养/个) = 总0.2营养。原料通常0.05/个。平衡。 -->
      </li>
    </ingredients>
    <products>
      <DE_ColdDrink>4</DE_ColdDrink>
    </products>
    <workAmount>400</workAmount>
  </RecipeDef>

