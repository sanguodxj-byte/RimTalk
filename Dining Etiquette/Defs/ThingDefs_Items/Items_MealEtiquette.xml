<Defs>

  <!-- Cold Drink -->
  <ThingDef ParentName="MealBase">
    <defName>DE_ColdDrink</defName>
    <label>cold drink</label>
    <description>A refreshing cold beverage. Provides very little nutrition but is consumed quickly.</description>
    <graphicData>
      <texPath>Things/Item/Meal/Simple</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5</MarketValue>
      <Mass>0.1</Mass>
      <WorkToMake>150</WorkToMake>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <ingestible>
      <preferability>DesperateOnly</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <baseIngestTicks>120</baseIngestTicks>
      <joyKind>Social</joyKind>
      <joy>0.08</joy>
    </ingestible>
  </ThingDef>

