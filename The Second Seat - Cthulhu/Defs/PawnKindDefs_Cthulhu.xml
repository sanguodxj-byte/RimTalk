<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 克苏鲁化身实体 -->
  <PawnKindDef>
    <defName>TSS_Cthulhu_Avatar</defName>
    <label>克苏鲁化身</label>
    <race>Human</race>
    <defaultFactionType>PlayerColony</defaultFactionType>
    
    <backstoryCategories>
      <li>Outlander</li>
    </backstoryCategories>
    <combatEnhancingDrugsChance>0</combatEnhancingDrugsChance>
    <combatPower>300</combatPower>
    
    <!-- 服装配置 -->
    <apparelTags>
      <li>IndustrialAdvanced</li>
    </apparelTags>
    
    <apparelMoney>
      <min>2000</min>
      <max>4000</max>
    </apparelMoney>
    
    <!-- 武器配置 -->
    <weaponMoney>
      <min>1000</min>
      <max>3000</max>
    </weaponMoney>
    
    <weaponTags>
      <li>Gun</li>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    
    <!-- 抵抗配置 -->
    <initialWillRange>
      <min>5</min>
      <max>8</max>
    </initialWillRange>
    
    <initialResistanceRange>
      <min>20</min>
      <max>30</max>
    </initialResistanceRange>
  </PawnKindDef>

  <!-- 触手怪（深渊召唤物） -->
  <PawnKindDef>
    <defName>TSS_Cthulhu_Tentacle</defName>
    <label>深渊触手</label>
    <race>Megaspider</race> <!-- 临时使用巨型蜘蛛模型 -->
    <defaultFactionType>Pirate</defaultFactionType>
    
    <combatPower>80</combatPower>
    <canArriveManhunter>false</canArriveManhunter>
    <ecoSystemWeight>0.5</ecoSystemWeight>
    
    <!-- 匹配 Megaspider 的 3 个生命阶段 -->
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider</texPath>
          <drawSize>1.5</drawSize>
          <color>(0.2, 0.6, 0.5)</color> <!-- 深青色 -->
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider_Dessicated</texPath>
          <drawSize>1.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider</texPath>
          <drawSize>1.75</drawSize>
          <color>(0.2, 0.6, 0.5)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider_Dessicated</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider</texPath>
          <drawSize>2.0</drawSize>
          <color>(0.2, 0.6, 0.5)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Megaspider_Dessicated</texPath>
          <drawSize>2.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>
