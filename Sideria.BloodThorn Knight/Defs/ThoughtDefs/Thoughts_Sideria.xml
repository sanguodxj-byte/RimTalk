<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ========================================
		 心情：骑士决心
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_KnightlyResolve</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>knightly resolve</label>
				<description>I am bound by honor to protect those under my care.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：战斗渴望
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_BattleLust</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>battle lust</label>
				<description>The thrill of combat courses through my veins. I live for the fight.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：血原质充盈
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_BloodEssence_Full</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Sideria_BloodEssence</hediff>
		<validWhileDespawned>false</validWhileDespawned>
		<stages>
			<li>
				<label>blood essence surging</label>
				<description>My power is at its peak. I feel unstoppable.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：血原质枯竭
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_BloodEssence_Depleted</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Sideria_BloodEssence</hediff>
		<validWhileDespawned>false</validWhileDespawned>
		<stages>
			<!-- 只在血原质低于20%时触发 -->
			<li>
				<label>blood essence depleted</label>
				<description>My power wanes. I need to recover my blood essence.</description>
				<baseMoodEffect>-12</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：击败强敌
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_DefeatedWorthyFoe</defName>
		<durationDays>3</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.75</stackedEffectMultiplier>
		<stages>
			<li>
				<label>defeated worthy foe</label>
				<description>I have bested a formidable opponent. My legend grows.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：长期和平（负面）
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_TooLongPeace</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>false</validWhileDespawned>
		<stages>
			<li>
				<label>yearning for battle</label>
				<description>It has been too long since I've faced a real challenge. My blade grows restless.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：保护他人
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_ProtectedAlly</defName>
		<durationDays>2</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>0.8</stackedEffectMultiplier>
		<stages>
			<li>
				<label>protected an ally</label>
				<description>I fulfilled my duty as a knight and protected someone in need.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 心情：背弃荣誉（负面）
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_BetrayedHonor</defName>
		<durationDays>10</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>1.2</stackedEffectMultiplier>
		<stages>
			<li>
				<label>betrayed my honor</label>
				<description>I have acted dishonorably. This shame weighs heavily on me.</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 记忆：使用血棘技能
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_UsedBloodAbility</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>10</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>unleashed blood power</label>
				<description>The rush of blood magic flows through me.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ========================================
		 记忆：收到食物（事件系统）
	========================================= -->
	<ThoughtDef>
		<defName>Sideria_ReceivedFood</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>received food</label>
				<description>Someone showed me kindness by sharing their food. I am grateful.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>
