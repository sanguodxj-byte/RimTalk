<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ========================================
		 血龙种 (Dracovampir Race)
		 使用 Humanoid Alien Races 框架
		 兼容 Facial Animation
	========================================= -->
	<AlienRace.ThingDef_AlienRace ParentName="BasePawn">
		<defName>Sideria_Dracovampir</defName>
		<label>dracovampir</label>
		<description>A rare hybrid species born from the forbidden union of ancient dragons and primordial vampires. Nearly immortal warriors with extraordinary combat abilities and regeneration.</description>
		
		<!-- 基础属性 -->
		<statBases>
			<MarketValue>3000</MarketValue>
			<MoveSpeed>4.9</MoveSpeed>
			<ComfyTemperatureMin>-60</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<ImmunityGainSpeed>1.8</ImmunityGainSpeed>
			<PsychicSensitivity>0.7</PsychicSensitivity>
			<ToxicResistance>0.5</ToxicResistance>
			<ToxicEnvironmentResistance>0.5</ToxicEnvironmentResistance>
		</statBases>
		
		<!-- 种族属性 -->
		<race>
			<thinkTreeMain>Humanlike</thinkTreeMain>
			<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
			<intelligence>Humanlike</intelligence>
			<makesFootprints>true</makesFootprints>
			<lifeExpectancy>9999</lifeExpectancy>
			<leatherDef>Leather_Human</leatherDef>
			<nameCategory>HumanStandard</nameCategory>
			<body>Human</body>
			<baseBodySize>1.0</baseBodySize>
			<baseHealthScale>1.4</baseHealthScale>
			<baseHungerRate>0.65</baseHungerRate>
			<foodType>OmnivoreHuman</foodType>
			<gestationPeriodDays>60</gestationPeriodDays>
			<meatMarketValue>1.0</meatMarketValue>
			<manhunterOnDamageChance>0.15</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0.00</manhunterOnTameFailChance>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(1.01, 0.01)</li>
					<li>(2.5, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeStageAges>
				<li>
					<def>HumanlikeBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>HumanlikeChild</def>
					<minAge>5</minAge>
				</li>
				<li>
					<def>HumanlikeTeenager</def>
					<minAge>15</minAge>
				</li>
				<li>
					<def>HumanlikeAdult</def>
					<minAge>20</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<specialShadowData>
				<volume>(0.3, 0.8, 0.3)</volume>
				<offset>(0,0,-0.3)</offset>
			</specialShadowData>
			<ageGenerationCurve>
				<points>
					<li>(500,0)</li>
					<li>(800,100)</li>
					<li>(3000,100)</li>
					<li>(6000,50)</li>
					<li>(9999,5)</li>
				</points>
			</ageGenerationCurve>
			<hediffGiverSets>
				<li>OrganicStandard</li>
			</hediffGiverSets>
		</race>
		
		<!-- HAR 扩展配置 -->
		<alienRace>
			<!-- 通用设置 -->
			<generalSettings>
				<alienPartGenerator>
					<!-- 自定义绘制尺寸 -->
					<customDrawSize>(1.02, 1.02)</customDrawSize>
					<customPortraitDrawSize>(1.0, 1.0)</customPortraitDrawSize>
					<customHeadDrawSize>(1.0, 1.0)</customHeadDrawSize>
					
					<!-- 颜色通道 - 使用colorChannels而不是废弃的标签 -->
					<colorChannels>
						<li>
							<name>skin</name>
							<first Class="ColorGenerator_Options">
								<options>
									<li>
										<weight>10</weight>
										<only>RGBA(0.92, 0.83, 0.83, 1.00)</only>
									</li>
									<li>
										<weight>10</weight>
										<only>RGBA(0.88, 0.78, 0.78, 1.00)</only>
									</li>
								</options>
							</first>
						</li>
						<li>
							<name>hair</name>
							<first Class="ColorGenerator_Options">
								<options>
									<li>
										<weight>10</weight>
										<only>RGBA(0.08, 0.08, 0.08, 1.00)</only>
									</li>
									<li>
										<weight>10</weight>
										<only>RGBA(0.65, 0.08, 0.08, 1.00)</only>
									</li>
								</options>
							</first>
						</li>
					</colorChannels>
					
					<!-- Body Addons: 额外部位（龙角、翅膀、尾巴、血纹等） -->
					<bodyAddons>
						<!-- 龙角 -->
						<li>
							<path>Things/Pawn/Humanlike/BodyAddons/DragonHorns</path>
							<colorChannel>skin</colorChannel>
							<defaultOffset>(0, 0.35)</defaultOffset>
							<defaultOffsetEast>(0, 0.35)</defaultOffsetEast>
							<drawSize>1.0</drawSize>
							<drawnInBed>true</drawnInBed>
							<drawnDesiccated>false</drawnDesiccated>
							<layerInvert>false</layerInvert>
							<layerOffset>0.01</layerOffset>
						</li>
						
						<!-- 龙翼 -->
						<li>
							<path>Things/Pawn/Humanlike/BodyAddons/DragonWings</path>
							<colorChannel>skin</colorChannel>
							<defaultOffset>(0, -0.1)</defaultOffset>
							<defaultOffsetEast>(-0.2, -0.1)</defaultOffsetEast>
							<drawSize>1.5</drawSize>
							<drawnInBed>false</drawnInBed>
							<drawnDesiccated>false</drawnDesiccated>
							<layerInvert>true</layerInvert>
							<layerOffset>-0.1</layerOffset>
							<hiddenUnderApparelTag>UpperBody</hiddenUnderApparelTag>
						</li>
						
						<!-- 龙尾 -->
						<li>
							<path>Things/Pawn/Humanlike/BodyAddons/DragonTail</path>
							<colorChannel>skin</colorChannel>
							<defaultOffset>(0, -0.5)</defaultOffset>
							<defaultOffsetEast>(-0.3, -0.5)</defaultOffsetEast>
							<drawSize>1.2</drawSize>
							<drawnInBed>false</drawnInBed>
							<drawnDesiccated>false</drawnDesiccated>
							<layerInvert>true</layerInvert>
							<layerOffset>-0.05</layerOffset>
						</li>
						
						<!-- 血纹（发光效果） -->
						<li>
							<path>Things/Pawn/Humanlike/BodyAddons/BloodMarkings</path>
							<colorChannel>hair</colorChannel>
							<defaultOffset>(0, 0)</defaultOffset>
							<defaultOffsetEast>(0, 0)</defaultOffsetEast>
							<drawSize>1.0</drawSize>
							<drawnInBed>true</drawnInBed>
							<drawnDesiccated>false</drawnDesiccated>
							<layerInvert>false</layerInvert>
							<layerOffset>0.02</layerOffset>
						</li>
					</bodyAddons>
				</alienPartGenerator>
				
				<!-- 最小成年年龄 -->
				<minAgeForAdulthood>500</minAgeForAdulthood>
				
				<!-- 人性化选项 -->
				<humanRecipeImport>true</humanRecipeImport>
				<immuneToXenophobia>false</immuneToXenophobia>
				
				<!-- 禁用的特质 -->
				<forcedRaceTraitEntries>
					<li>
						<defName>Wimp</defName>
						<chance>0</chance>
					</li>
				</forcedRaceTraitEntries>
			</generalSettings>
			
			<!-- 外观设置 -->
			<graphicPaths>
				<li>
					<lifeStageDefs>
						<li>HumanlikeBaby</li>
						<li>HumanlikeChild</li>
						<li>HumanlikeTeenager</li>
						<li>HumanlikeAdult</li>
					</lifeStageDefs>
					<head>Things/Pawn/Humanlike/Heads/Male</head>
					<body>Things/Pawn/Humanlike/Bodies/Dracovampir/Naked_Male</body>
					<skeleton>Things/Pawn/Humanlike/HumanoidDessicated</skeleton>
				</li>
				<li>
					<lifeStageDefs>
						<li>HumanlikeBaby</li>
						<li>HumanlikeChild</li>
						<li>HumanlikeTeenager</li>
						<li>HumanlikeAdult</li>
					</lifeStageDefs>
					<head>Things/Pawn/Humanlike/Heads/Female</head>
					<body>Things/Pawn/Humanlike/Bodies/Dracovampir/Naked_Female</body>
					<skeleton>Things/Pawn/Humanlike/HumanoidDessicated</skeleton>
				</li>
			</graphicPaths>
			
			<!-- 思维设置 -->
			<thoughtSettings>
				<cannotReceiveThoughts />
				<cannotReceiveThoughtsAtAll />
			</thoughtSettings>
			
			<!-- 关系设置 -->
			<relationSettings>
				<relationChanceModifierChild>0.3</relationChanceModifierChild>
				<relationChanceModifierExLover>0.8</relationChanceModifierExLover>
				<relationChanceModifierExSpouse>0.6</relationChanceModifierExSpouse>
				<relationChanceModifierFiance>0.8</relationChanceModifierFiance>
				<relationChanceModifierLover>0.9</relationChanceModifierLover>
				<relationChanceModifierParent>0.3</relationChanceModifierParent>
				<relationChanceModifierSibling>0.4</relationChanceModifierSibling>
				<relationChanceModifierSpouse>0.7</relationChanceModifierSpouse>
			</relationSettings>
			
			<!-- 种族限制 -->
			<raceRestriction>
				<onlyUseRaceRestrictedApparel>false</onlyUseRaceRestrictedApparel>
				<onlyDoRaceRestrictedRecipes>false</onlyDoRaceRestrictedRecipes>
				<onlyGetRaceRestrictedTraits>false</onlyGetRaceRestrictedTraits>
				<onlyEatRaceRestrictedFood>false</onlyEatRaceRestrictedFood>
			</raceRestriction>
		</alienRace>
		
		<!-- 近战工具 -->
		<tools>
			<li>
				<label>left fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.4</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.4</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
			</li>
		</tools>
		
		<!-- 贴图数据 -->
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Bodies/Naked_Male</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>0.92</drawSize>
			<shadowData>
				<volume>(0.35, 0.75, 0.35)</volume>
				<offset>(0, 0, -0.08)</offset>
			</shadowData>
		</graphicData>
		
		<!-- 交易标签 -->
		<tradeTags>
			<li>Sideria_Dracovampir</li>
		</tradeTags>
	</AlienRace.ThingDef_AlienRace>

</Defs>
