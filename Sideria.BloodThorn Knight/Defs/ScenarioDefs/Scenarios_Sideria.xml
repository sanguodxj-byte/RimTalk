<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ========================================
		 希德莉亚开局场景 - 血棘骑士与阿茨冈德
	========================================= -->
	<ScenarioDef>
		<defName>Sideria_BloodThornKnightStart</defName>
		<label>BloodThorn Knight</label>
		<description>The legendary BloodThorn Knight, Sideria, arrives on this rimworld seeking a new purpose. She carries Atzgand, her biocodded blade that resonates with her blood essence.</description>
		<scenario>
			<summary>One legendary warrior with her living blade.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- 开局角色配置 -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>1</pawnCount>
					<pawnChoiceCount>1</pawnChoiceCount>
				</li>
				
				<!-- 专属武器：阿茨冈德（已生物编码） -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Sideria_Weapon_Atzgand</thingDef>
					<count>1</count>
				</li>
				
				<!-- 起始资源 -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>1000</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>40</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>30</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>ComponentIndustrial</thingDef>
					<count>30</count>
				</li>
				
				<!-- 基础设置 -->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>
				
				<!-- 起始季节：春季 -->
				<li Class="ScenPart_ForcedSeason">
					<def>ForcedSeason</def>
					<season>Spring</season>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

	<!-- ========================================
		 可选场景：血棘骑士团（多人开局）
	========================================= -->
	<ScenarioDef>
		<defName>Sideria_BloodKnightSquad</defName>
		<label>Blood Knight Squad</label>
		<description>Sideria and her Blood Knight companions arrive on the rimworld. A small but elite force ready to face any challenge.</description>
		<scenario>
			<summary>Elite Blood Knight squad.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- 3人小队 -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>
				
				<!-- 阿茨冈德 -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Sideria_Weapon_Atzgand</thingDef>
					<count>1</count>
				</li>
				
				<!-- 更多起始资源 -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>1500</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>60</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>40</count>
				</li>
				
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Steel</thingDef>
					<count>600</count>
				</li>
				
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

</Defs>
