<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <!-- 说服进度追踪 Hediff -->
  <HediffDef>
    <defName>SuperbRecruitment_PersuasionTracking</defName>
    <label>说服进度</label>
    <description>这名访客正在被说服加入殖民地。</description>
    <hediffClass>SuperbRecruitment.Hediff_PersuasionTracking</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>0.5</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <scenarioCanAdd>false</scenarioCanAdd>
    <everCurableByItem>false</everCurableByItem>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <comps>
      <li Class="SuperbRecruitment.HediffCompProperties_PersuasionTracker">
        <compClass>SuperbRecruitment.HediffComp_PersuasionTracker</compClass>
      </li>
    </comps>
  </HediffDef>

  <!-- 成功招募后的正面想法 -->
  <ThoughtDef>
    <defName>SuperbRecruitment_ConvinvedToJoin</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>被说服加入殖民地</label>
        <description>我被说服加入了这个殖民地。他们看起来是不错的人。</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- 招募失败后的负面想法 -->
  <ThoughtDef>
    <defName>SuperbRecruitment_FailedPersuasion</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>强势的殖民者</label>
        <description>这些殖民者一直试图说服我加入他们。真是烦人。</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
